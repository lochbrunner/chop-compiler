    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'ichop'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=ichop",
                    "--package=ichop"
                ],
                "filter": {
                    "name": "ichop",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'core'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib=core",
                    "--package=core"
                ],
                "filter": {
                    "name": "core",
                    "kind": "lib"
                }
            },
            "args": [
                "e2e::multiple_statements"
            ],
            "cwd": "${workspaceFolder}",
            "sourceLanguages": [
                "rust"
            ]
        }
    ]
}